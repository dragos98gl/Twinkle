<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/playerbg"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/playerimg"
        android:layout_width="251.0dp"
        android:layout_height="200.5dp"
        android:layout_centerHorizontal="true"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView1"
        android:layout_marginTop="177.5dp" />
    <SeekBar
        android:layout_width="280.0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView1"
        android:id="@+id/seekBar1" />
    <ImageView
        android:src="@drawable/pausebtn"
        android:layout_width="100.0dp"
        android:layout_height="100.0dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView2"
        android:tag="0"
        android:layout_marginBottom="50dp" />

</RelativeLayout>
